{
  "name": "react-app",
  "version": "1.0.0",
  "scripts": {
    "client:start": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "server:start": "nodemon server/app.js --exec babel-node",
    "server:build": "babel server --out-dir dist",
    "build": "cross-env NODE_ENV=production concurrently --kill-others-on-fail \"npm run server:build\" \"npm run client:build\"",
    "dev": "cross-env NODE_ENV=development concurrently --kill-others-on-fail \"npm run server:start\" \"npm run client:start\"",
    "start": "node dist/app.js",
    "test": "npm run test:client && npm run test:server",
    "test:client": "jest --testPathPattern=\"client/.*__tests__/.*(test.js)\"",
    "test:server": "jest --testPathPattern=\"server/.*__tests__/.*(test.js)\"",
    "postinstall": "cd client && npm install && cd .. && npm run build",
    "lint:client": "cd client && npm run pre-commit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all lint:*"
    }
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "classnames": "^2.2.6",
    "dotenv": "^8.0.0",
    "express": "^4.16.2",
    "jsonwebtoken": "^8.1.1",
    "lodash": "^4.17.4",
    "moment": "^2.24.0",
    "mongoose": "^5.0.3",
    "multer": "^1.4.1",
    "node-fetch": "^2.3.0",
    "node-sass": "^4.11.0",
    "normalize.css": "^8.0.1",
    "password-hash": "^1.2.2",
    "socket.io": "^2.0.4",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "body-parser": "^1.18.2",
    "clean-dir": "^1.0.3",
    "concurrently": "^3.5.0",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.2.0",
    "expect-puppeteer": "^4.1.1",
    "husky": "^2.4.0",
    "jest": "^23.6.0",
    "jest-puppeteer": "^4.1.1",
    "morgan": "^1.9.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.2",
    "puppeteer": "^1.14.0"
  }
}
