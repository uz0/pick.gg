{
  "name": "react-app",
  "version": "1.0.0",
  "scripts": {
    "client:start": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "server:start": "nodemon server/app.js --exec babel-node",
    "server:build": "babel server --out-dir dist",
    "build": "cross-env NODE_ENV=production concurrently --kill-others-on-fail \"npm run server:build\" \"npm run client:build\"",
    "dev": "cross-env NODE_ENV=development concurrently --kill-others-on-fail \"npm run server:start\" \"npm run client:start\"",
    "start": "node dist/app.js",
    "postinstall": "cd client && npm install && cd .. && npm run build"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "express": "^4.16.2",
    "jsonwebtoken": "^8.1.1",
    "lodash": "^4.17.4",
    "moment": "^2.24.0",
    "mongoose": "^5.0.3",
    "node-sass": "^4.11.0",
    "normalize.css": "^8.0.1",
    "password-hash": "^1.2.2",
    "socket.io": "^2.0.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "body-parser": "^1.18.2",
    "clean-dir": "^1.0.3",
    "concurrently": "^3.5.0",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.2.0",
    "morgan": "^1.9.0",
    "npm-run-all": "^4.1.2"
  }
}
